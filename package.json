{
    "name": "genealogy-backend",
    "version": "0.1.0",
    "description": "A Node.js express backend API for Genealogy",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/GrahamBragg/genealogy-backend.git"
    },
    "author": "Graham Bragg & Simon Bragg",
    "license": "MIT",
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
        "test": "jest --forceExit --coverage --verbose",
        "watch-test": "npm run test -- --watchAll",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
        "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
    },
    "dependencies": {
        "bluebird": "^3.7.2",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "connect-mongo": "^3.2.0",
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "lusca": "^1.6.1",
        "moment": "^2.25.3",
        "mongoose": "^5.9.11",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/bluebird": "^3.5.30",
        "@types/chai": "^4.2.11",
        "@types/compression": "^1.7.0",
        "@types/concurrently": "^5.2.0",
        "@types/connect-mongo": "^3.1.3",
        "@types/errorhandler": "^1.5.0",
        "@types/eslint": "^6.8.0",
        "@types/express-session": "^1.17.0",
        "@types/jest": "^25.2.1",
        "@types/lusca": "^1.6.1",
        "@types/mongoose": "^5.7.14",
        "@types/node": "^13.13.4",
        "@types/node-sass": "^4.11.0",
        "@types/shelljs": "^0.8.7",
        "@types/supertest": "^2.0.9",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "@typescript-eslint/parser": "^2.30.0",
        "chai": "^4.2.0",
        "concurrently": "^5.2.0",
        "eslint": "^6.8.0",
        "jest": "^25.5.4",
        "node-sass": "^4.14.0",
        "nodemon": "^2.0.3",
        "shelljs": "^0.8.4",
        "supertest": "^4.0.2",
        "ts-jest": "^25.4.0",
        "ts-node": "^8.10.1",
        "typescript": "^3.8.3"
    }
}
